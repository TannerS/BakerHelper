<?xml version="1.0" encoding="utf-8"?>
<!--With help from-->
<!--https://stackoverflow.com/questions/8930555/android-drawable-with-rounded-corners-at-the-top-only-->
<!--https://stackoverflow.com/questions/24095223/android-linearlayout-add-border-with-shadow-around-a-linearlayout-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#37000000"/>
        <corners android:radius="5dp" />
    </shape>
</item>

<item
    android:left="1dp"
    android:right="1dp"
    android:top="0dp"
    android:bottom="1dp">
    <shape android:shape="rectangle">
        <solid android:color="@android:color/white"/>
        <corners android:radius="5dp" />
    </shape>
</item>
</layer-list>